DEFAULT menu.c32
PROMPT 0

MENU TITLE CoreOS-Install-Menu
MENU AUTOBOOT Starting CoreOS in # seconds

timeout 18
ONTIMEOUT coreOS

LABEL coreOS
menu label Add {{ item.name }} {{ item.hostname }} Node
kernel {{ dir_coreos_files }}{{ coreos_kernel }}
append ip=dhcp rd.neednet=1 initrd={{ dir_coreos_files }}{{ coreos_initramfs }} console=tty0 console=ttyS0 coreos.inst=yes coreos.inst.install_dev=sda coreos.inst.image_url=http://{{ bastion.ip }}/{{ dir_http_server_subdir }}{{ coreos_compressed_metal_raw_image }} coreos.inst.ignition_url=http://{{ bastion.ip }}/{{ dir_http_server_subdir }}{{ ignition_file }}
