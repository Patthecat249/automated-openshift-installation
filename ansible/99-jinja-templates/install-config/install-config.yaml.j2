apiVersion: v1
baseDomain: {{ domain }}
compute:
- hyperthreading: Enabled   
  name: worker
  replicas: 0 
controlPlane:
  hyperthreading: Enabled   
  name: master 
  replicas: {{ masters| length }}
metadata:
  name: {{ clustername }}
networking:
  clusterNetwork:
  - cidr: {{ clusternetwork }}
    hostPrefix: {{ hostprefix | default(23) }}
  networkType: OpenShiftSDN
  serviceNetwork: 
  - {{ servicenetwork }}
platform:
  none: {} 
fips: false 
