apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: {{ storage_class_name }}
provisioner: {{ provisioner_name | default('nfs-provisioner') }} # or choose another name, must match deployment's env PROVISIONER_NAME'
reclaimPolicy: "Delete"
parameters:
  archiveOnDelete: "false"
allowVolumeExpansion: true